  <script>
    setTimeout(function () {
      var adBoxEl = document.querySelector(".ad-box");
      var hasAdBlock = window.getComputedStyle(adBoxEl)?.display === "none";
      var adBlockModalEl = document.querySelector("#ad-block-modal");
  
      if (hasAdBlock) {
        console.log("Turn off your ad blocker");
        adBlockModalEl.style.display = "block";
        $(adBlockModalEl).modal("show");
      }
    }, 2000);
  </script>

