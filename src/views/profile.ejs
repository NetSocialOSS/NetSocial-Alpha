<!DOCTYPE html>
<html>
<head>
  <title>Profile</title>
  <link rel="stylesheet" href="/static/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Welcome, <%= username %>!</h1>
    <a href="/logout" class="btn btn-primary">Logout</a>
    <hr>
    <h2>Your Tweets</h2>
    <% if (tweets.length > 0) { %>
        <% tweets.forEach(function(tweet) { %>
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= tweet.content %></h5>
                <p class="card-text">
                  <small class="text-muted">
                    <% if (tweet.user && tweet.user.username) { %>
                      Posted by <%= tweet.user.username %>
                    <% } %>
                    <% if (tweet.createdAt) { %>
                      on <%= tweet.createdAt.toDateString() %>
                    <% } %>
                  </small>
                </p>
              </div>
            </div>
          <% }); %>
          
    <% } else { %>
      <p>No tweets found.</p>
    <% } %>
    <hr>
    <h2>Create a New Tweet</h2>
    <form action="/tweets" method="post">
      <div class="form-group">
        <textarea class="form-control" name="content" rows="3" placeholder="Write your tweet"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Post Tweet</button>
    </form>
  </div>
</body>
</html>
